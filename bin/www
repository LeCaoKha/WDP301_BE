#!/usr/bin/env node

// Load environment variables as early as possible
require("dotenv").config({ override: true, quiet: true });

/**
 * Module dependencies.
 */

const app = require("../app");
const debug = require("debug")("evdriver:server");
const http = require("http");
const connectDB = require("../config/database");
const { initializeSocket } = require("../socket/socketService");
const {
  updateExpiredSubscriptions,
  startSubscriptionScheduler,
} = require("../utils/subscriptionScheduler");
const {
  activateBookingsAtStartTime,
  expirePastBookings,
  startBookingScheduler,
} = require("../utils/bookingScheduler");
const {
  startChargingSessionScheduler,
} = require("../utils/chargingSessionScheduler");

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || "5000");
app.set("port", port);

/**
 * Create HTTP server.
 */

const server = http.createServer(app);

// Initialize Socket.io
initializeSocket(server);

/**
 * Connect to MongoDB then start server
 */
const startServer = async () => {
  try {
    await connectDB();
    server.listen(port);
    server.on("error", onError);
    server.on("listening", onListening);
    console.log(`üöÄ Server running on port ${port}`);

    // Run initial check for expired subscriptions
    console.log("‚è∞ Checking for expired subscriptions...");
    await updateExpiredSubscriptions();

    // Run initial check for bookings
    console.log("‚è∞ Checking for bookings to activate...");
    await activateBookingsAtStartTime();
    await expirePastBookings();

    // Start subscription scheduler using node-cron
    // This will run every hour at minute 0 (00:00, 01:00, 02:00, ... 23:00)
    startSubscriptionScheduler();

    // Start booking scheduler using node-cron
    // Default: every 1 minute, can be overridden by BOOKING_CHECK_INTERVAL env var
    // Format: number in minutes (e.g., 1, 5, 10)
    // Set BOOKING_CHECK_INTERVAL=5 in .env for production if needed
    const bookingCheckIntervalMinutes = parseInt(process.env.BOOKING_CHECK_INTERVAL) || 1;
    startBookingScheduler({
      intervalMinutes: bookingCheckIntervalMinutes,
    });

    // ‚úÖ Start charging session scheduler (auto-update battery)
    const chargingUpdateInterval = parseInt(process.env.CHARGING_UPDATE_INTERVAL) || 5; // Default: 5 seconds
    startChargingSessionScheduler({
      intervalSeconds: chargingUpdateInterval,
    });
  } catch (error) {
    console.error("Failed to start server:", error);
    process.exit(1);
  }
};

startServer();

/**
 * Error handler
 */

function onError(error) {
  if (error.syscall !== "listen") throw error;

  const bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Listening handler
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
}
